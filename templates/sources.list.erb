## Security Updates
<% if lsbdistid == 'Ubuntu' then -%>
deb <%= url.downcase %> <%= lsbdistcodename %>-security <%= scope.lookupvar("apt::section") %>
<% if scope.lookupvar('apt::getsrc') then %>deb-src <%= url.downcase %> <%= lsbdistcodename %>-security <%= scope.lookupvar("apt::section") %><% end -%>
<% end -%>
<% if lsbdistid == 'Debian' then -%>
deb http://security.debian.org <%= lsbdistcodename %>/updates <%= scope.lookupvar("apt::section") %>
<% if scope.lookupvar('apt::getsrc') then %>deb-src <%= url.downcase %> http://security.debian.org/updates <%= scope.lookupvar("apt::section") %><% end -%>
<% end -%>

<% if lsbdistid == 'Ubuntu' and scope.lookupvar('enable_proposed') then -%>
