<% end -%>

## Security Updates
<% if scope['::lsbdistid'] == 'Ubuntu' then -%>
deb <%= @url.downcase %> <%= scope['::lsbdistcodename'] %>-security <%= scope['apt::section'] %>
<% if scope['apt::getsrc'] then %>deb-src <%= @url.downcase %> <%= scope['::lsbdistcodename'] %>-security <%= scope['apt::section'] %><% end -%>
<% end -%>
<% if scope['::lsbdistid'] == 'Debian' then -%>
deb http://security.debian.org <%= scope['::lsbdistcodename'] %>/updates <%= scope['apt::section'] %>
<% if scope['apt::getsrc'] then %>deb-src <%= @url.downcase %> http://security.debian.org/updates <%= scope['apt::section'] %><% end -%>
<% end -%>

<% if scope['::lsbdistid'] == 'Ubuntu' and scope.lookupvar('enable_proposed') then -%>
## Proposed Updates
deb <%= @url.downcase %> <%= scope['::lsbdistcodename'] %>-proposed <%= scope['apt::section'] %>
<% end -%>
